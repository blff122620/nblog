<main>
    
    <section id="js-box-section">
        <article id="js-article">
            <% if(posts){%>
            <% if(posts.length>0){%>
            <% posts.forEach(function (post,index) { %>
                <%- include('components/box', { post: post ,index:posts.length-index}) %>
            <% }); %>
            <% }else{%>
                <div class="alert">
                    <p>朋友，您的主页还空空如也，写篇文章先~</p>
                </div>
                 <%- include('components/pub-box') %> 
            <% }%>
            <% }%>
        </article>
        
        <div class="paging">
            
            <ul>
                <% pageBar.forEach(function(item){%>
                <a 
                    <% if(item.href){%> 
                        href="<%=item.url%>"
                    <%}%> 

                    class="a <% if(item.selected){%> p-selected <%}else{%> n-color <%}%> 
                    <% if(item.aside){%> p-aside <%}%>"
                >
                    <li class="box-shadow">
                        <%=item.content%>  
                    </li>
                </a>
                
                <% });%>
            </ul>
        </div>
    </section>
</main>